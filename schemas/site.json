{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Site",
  "description": "Describes the site",
  "properties": {
    "siteId": {
      "type": "string",
      "description": "Specifies siteId that maps to Master Data",
      "minLength": 1
    },
    "location": { "$ref": "locations.json#/definitions/location" }
  },
  "anyOf": [
    { "required": ["siteId"] },
    { "required": ["location"] }
  ]
}